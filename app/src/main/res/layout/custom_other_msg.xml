<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="30dp"
    android:paddingBottom="5dp" >

    <LinearLayout
        android:id="@+id/otherLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:background="@drawable/bg_bubble_white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/timestampWeb"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:gravity="left"
            android:textColor="#4d4848"
            android:text="15-May-2016"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/messageWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:text="Please help me ?"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/webUsernameReplied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#f19e9e"
            android:text=""
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>