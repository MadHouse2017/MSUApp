<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/spinner_main">

    <ImageView
        android:id="@+id/left_pic"
        android:layout_width="45px"
        android:layout_height="60px" />

    <RelativeLayout
        android:id="@+id/spinner_text"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left_pic">

    <TextView
        android:id="@+id/text_main_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8px"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:padding="3px"
        android:textSize="17dp"
        android:text="JMD Group"/>

    <TextView
        android:id="@+id/sub_text_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_main_seen"
        android:layout_marginLeft="9px"
        android:layout_marginBottom="3dp"
        android:padding="2px"
        android:textSize="12dp"
        android:visibility="gone"
        android:text="beyond the expectations..."
        android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/extra_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/sub_text_seen"
            android:textSize="0dp"
            android:text=""
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner_text"
        tools:ignore="RtlCompat">
  <!--  <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle"/>-->

        <ProgressBar
            android:id="@+id/spinnerProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:progressDrawable="@drawable/greenprogress" />
     </RelativeLayout>

</RelativeLayout>

    <!--<TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:gravity="bottom"
        android:layout_below="@id/spinner_main"
        android:background="#BDBDBD"
        />-->

</RelativeLayout>



